{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "name": "Pages",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z]+$"
    },
    "hero": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "content1": {
      "type": "component",
      "repeatable": false,
      "component": "content-block.content"
    },
    "content2": {
      "type": "component",
      "repeatable": false,
      "component": "content-block.content"
    },
    "form": {
      "type": "component",
      "repeatable": false,
      "component": "form-setup.form",
      "required": true
    },
    "cta": {
      "type": "string"
    }
  }
}
